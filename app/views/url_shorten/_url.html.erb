
<% if @small_url %>

  <div class="jumbotron center-block">
    <h3>Your Beautiful New Url:</h3>
    <p>
      <a href="<%= @small_url %>" target="_blank">
        <%= root_url %><%= @small_url %></a>
        <span class="glyphicon glyphicon-copy my_clip_button" data-clipboard-target="small_url"
              data-clipboard-text='<%= root_url %><%= @small_url %>'
              title='Click me to copy to clipboard.' id='d_clip_button'></span>
    </p>
    <p id="original_url">
      (<em>Original URL:<span id="url"> <%= @original_url %></span></em>)
    </p>

  </div>

<% else %>

  <div class="jumbotron center-block alert alert-danger">
    <h3><%= @error_message %></h3>
  </div>

<% end  %>

<script>
$(document).ready(function() {
var clip = new ZeroClipboard($("#d_clip_button"))
});

</script>

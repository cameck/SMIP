
<% if @small_url %>

  <div class="jumbotron center-block">
    <h3>Your Beautiful New Url:</h3>
    <p>
      <a href="<%= @small_url %>" target="_blank" id="copy-link">
        <%= root_url %><%= @small_url %></a>

              <button class="btn btn-primary my_clip_button" id="d_clip_button"
                    title='Click me to copy to clipboard.'>Copy</button>
    </p>
    <p id="original_url">
      (<em>Original URL:<span id="url"> <%= @original_url %></span></em>)
    </p>

  </div>

<% else %>

  <div class="jumbotron center-block alert alert-danger">
    <h3><%= @error_message %></h3>
  </div>

<% end  %>

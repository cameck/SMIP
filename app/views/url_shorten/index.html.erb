<div class="container center-block">

    <div class="row">
      <%= image_tag "smip-logo.png" , {width: "50%"} %>
      <div class="col-md-6 col-md-offset-3">
        <h3>"SMIP" That Long URL!</h3>
      </div>
    </div>

    <div class="row center-block" id="form-wrap">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@new_url, url: shortner_path, remote: true) do |f|%>
          <div class="form-group">
            <%= f.text_field (:original_url), class: "form-control",
                              placeholder: "Paste Your Long URL Here" %>
          </div>
          <%= button_tag(type: 'submit', class: "btn btn-primary", id: "create-button") do %>
          "SMIP" Your URL!
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- Shortened URL gets displayed here when user clicks enter -->
    <div id="url-holder"></div>
</div>

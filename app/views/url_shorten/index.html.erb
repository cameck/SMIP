<div class="container center-block">

    <div class="row">
      <%= image_tag "smip-logo.png" , {width: "65%"} %>
      <div class="col-md-6 col-md-offset-3">
        <h3>"Smip" that long URL!</h3>
      </div>
    </div>

    <div class="row center-block">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@new_url, url: shortner_path, :remote => true) do |f|%>
          <div class="form-group">
            <%= f.hidden_field :small_url, :value => UrlShorten.new.url %>
            <%= f.text_field (:original_url), class: "form-control" %>
          </div>
          <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
          "Smip" your URL!
          <% end %>
        <% end %>
      </div>
    </div>
    <div id="url-holder"></div>
</div>
